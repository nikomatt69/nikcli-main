# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# TypeScript and JavaScript files
[*.{ts,tsx,js,jsx,mjs,cjs}]
indent_size = 2
quote_type = single

# JSON files
[*.json]
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false

# Package files
[package.json]
indent_size = 2

# Configuration files
[*.{toml,ini,cfg,conf}]
indent_size = 2

# Shell scripts
[*.{sh,bash,zsh}]
indent_size = 2
end_of_line = lf

# Windows batch files
[*.{bat,cmd}]
end_of_line = crlf

# HTML files
[*.{html,htm}]
indent_size = 2

# CSS files
[*.{css,scss,sass,less}]
indent_size = 2

# SQL files
[*.sql]
indent_size = 2

# Docker files
[Dockerfile]
indent_size = 2

# Git files
[.gitignore]
indent_size = 2

[.gitattributes]
indent_size = 2

# Documentation
[*.{txt,rst,adoc}]
indent_size = 2

# XML files
[*.{xml,svg}]
indent_size = 2

# Makefiles
[Makefile]
indent_style = tab

# Binary files (should not be modified)
[*.{png,jpg,jpeg,gif,ico,pdf,zip,tar.gz,tgz,rar,7z,exe,dll,so,dylib,app,dmg,pkg,deb,rpm,msi}]
indent_style = unset
indent_size = unset
end_of_line = unset
insert_final_newline = unset
trim_trailing_whitespace = unset
charset = unset
