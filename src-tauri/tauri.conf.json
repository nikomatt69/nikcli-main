{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "NikCLI",
  "version": "0.1.0",
  "identifier": "com.nikcli.desktop",
  "build": {
    "beforeDevCommand": {
      "script": "bun run dev",
      "cwd": "../src/tauri-frontend"
    },
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": {
      "script": "bun run build",
      "cwd": "../src/tauri-frontend"
    },
    "frontendDist": "../src/tauri-frontend/dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "NikCLI",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "transparent": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "category": "DeveloperTool",
    "shortDescription": "AI-powered CLI assistant",
    "longDescription": "NikCLI is a context-aware AI development assistant that runs in your terminal.",
    "macOS": {
      "minimumSystemVersion": "10.15"
    },
    "linux": {
      "appimage": {
        "bundleMediaFramework": false
      }
    },
    "windows": {
      "webviewInstallMode": {
        "type": "downloadBootstrapper"
      }
    }
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}
