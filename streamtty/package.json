{
  "name": "streamtty",
  "version": "0.1.0",
  "description": "A drop-in replacement for markdown rendering in TTY, designed for AI-powered streaming with blessed",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "streamtty": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "example:basic": "ts-node examples/basic.ts",
    "example:streaming": "ts-node examples/streaming.ts",
    "example:interactive": "ts-node examples/enhanced-streaming-test.ts",
    "example:chat": "ts-node tsx examples/chat.ts",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "markdown",
    "tty",
    "terminal",
    "blessed",
    "streaming",
    "ai",
    "tui"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "ansi-regex": "^6.0.1",
    "asciichart": "^1.5.25",
    "blessed": "^0.1.81",
    "blessed-contrib": "^4.11.0",
    "chalk": "^4.1.2",
    "cli-highlight": "^2.1.11",
    "katex": "^0.16.9",
    "marked": "^12.0.2",
    "marked-gfm-heading-id": "^4.1.2",
    "mathjs": "^12.0.0",
    "rehype-katex": "^7.0.0",
    "remark-math": "^6.0.0",
    "sanitize-html": "^2.11.0",
    "shiki": "^1.0.0",
    "tty-table": "^4.2.3"
  },
  "devDependencies": {
    "@types/asciichart": "^1.5.8",
    "@types/blessed": "^0.1.25",
    "@types/marked": "^6.0.0",
    "@types/node": "^20.19.20",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}