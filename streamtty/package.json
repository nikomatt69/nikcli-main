{
  "name": "streamtty",
  "version": "0.2.0",
  "description": "A drop-in replacement for markdown rendering in TTY, designed for AI-powered streaming with blessed",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "streamtty": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "example:basic": "tsx examples/basic.ts",
    "example:streaming": "bunx tsx examples/streaming.ts",
    "example:chat": "tsx examples/chat.ts",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "markdown",
    "tty",
    "terminal",
    "blessed",
    "streaming",
    "ai",
    "tui"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "blessed": "^0.1.81",
    "marked": "^12.0.2",
    "marked-gfm-heading-id": "^4.1.2",
    "chalk": "^4.1.2"
  },
  "devDependencies": {
    "@types/blessed": "^0.1.25",
    "@types/marked": "^6.0.0",
    "@types/node": "^20.19.20",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}