# NikCLI Environment Variables Configuration
# Copy this file to .env and fill in your values

# ============================================================================
# AI Model Providers API Keys (at least one required)
# ============================================================================

# Anthropic Claude (Recommended)
ANTHROPIC_API_KEY=

# OpenAI GPT
OPENAI_API_KEY=

# OpenRouter (Multiple Models)
OPENROUTER_API_KEY=

# Google Gemini
GOOGLE_GENERATIVE_AI_API_KEY=

# Mistral AI
MISTRAL_API_KEY=

# Perplexity AI (For research mode)
PERPLEXITY_API_KEY=

# XAI (Grok)
XAI_API_KEY=

# Vercel v0
V0_API_KEY=

# ============================================================================
# Upstash Redis Cache (Enabled by default - Highly Recommended)
# ============================================================================
# Sign up at: https://upstash.com
# Required for optimal performance and caching

UPSTASH_REDIS_REST_URL=
UPSTASH_REDIS_REST_TOKEN=

# Note: If not provided, NikCLI will fall back to in-memory caching
# Get your credentials from Upstash Console after creating a Redis database

# ============================================================================
# Supabase Database (Enabled by default - Highly Recommended)
# ============================================================================
# Sign up at: https://supabase.com
# Required for persistent storage, sessions, and vector search

SUPABASE_URL=
SUPABASE_ANON_KEY=
SUPABASE_SERVICE_ROLE_KEY=

# Note: If not provided, NikCLI will operate without cloud persistence
# Get your credentials from Supabase Project Settings > API

# ============================================================================
# Optional: Azure OpenAI
# ============================================================================

AZURE_OPENAI_API_KEY=
AZURE_OPENAI_ENDPOINT=

# ============================================================================
# Optional: AWS Bedrock
# ============================================================================

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1

# ============================================================================
# Optional: Ollama (Local Models)
# ============================================================================

OLLAMA_BASE_URL=http://localhost:11434/api

# ============================================================================
# Optional: Browserbase (Web Automation)
# ============================================================================

BROWSERBASE_API_KEY=
BROWSERBASE_PROJECT_ID=

# ============================================================================
# Optional: Image Generation
# ============================================================================

# Replicate (for Flux, SDXL)
REPLICATE_API_KEY=

# Stability AI
STABILITY_API_KEY=

# ============================================================================
# Optional: Memory & Context
# ============================================================================

# Mem0 AI
MEM0_API_KEY=

# ============================================================================
# Optional: GitHub Integration
# ============================================================================

GITHUB_TOKEN=
GITHUB_WEBHOOK_SECRET=

# ============================================================================
# System Configuration
# ============================================================================

# Logging level (debug, info, warn, error)
NIKCLI_LOG_LEVEL=info

# Quiet startup (no initialization logs)
NIKCLI_QUIET_STARTUP=false

# Node environment
NODE_ENV=development

